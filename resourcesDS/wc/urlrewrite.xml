<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite 
		PUBLIC "-//tuckey.org//DTD UrlRewrite 2.6//EN"
		"http://www.tuckey.org/res/dtds/urlrewrite2.6.dtd">

<!--
	Configuration file for Data Sutra by Data Mosaic
	http://www.data-mosaic.com/data-sutra/

	Rewriting provided by UrlRewriteFilter
	http://www.tuckey.org/urlrewrite/
-->

<urlrewrite>
	
	<!-- DS WebClient with /ds/ prefix -->
	<rule>
		<name>DS js</name>
		<note>Pass all ds/js </note>
		<from>^/ds/js/(.*)$</from>
		<to last="true">/ds/js/$1</to>
	</rule>
	
	<rule>
		<name>DS external</name>
		<note>Pass all ds/external</note>
		<from>^/ds/external/(.*)$</from>
		<to last="true">/ds/external/$1</to>
	</rule>
	
	<rule>
		<name>DS css</name>
		<note>Pass all ds/css</note>
		<from>^/ds/css/(.*)$</from>
		<to last="true">/ds/css/$1</to>
	</rule>
	
	<rule>
		<name>DS favicon</name>
		<note>Favicon</note>
		<from>^/favicon.ico$</from>
		<to last="true">/ds/favicon.ico</to>
	</rule>
	
	<rule>
		<name>DS iOS icon</name>
		<note></note>
		<from>^/apple-touch-icon.png$</from>
		<to last="true">/ds/apple-touch-icon.png</to>
	</rule>

	<rule>
		<name>DS no trailing slash</name>
		<note></note>
		<from>^/ds$</from>
		<to>/ds/index.html</to>
	</rule>

	<rule>
		<name>DS</name>
		<note></note>
		<from>^/ds/(.*)$</from>
		<to last="true">/ds/index.html?path=$1</to>
	</rule>

</urlrewrite>

